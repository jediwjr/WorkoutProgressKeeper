<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="left" >

    <LinearLayout
        android:id="@+id/working_out_activity_linearLayout"
        android:layout_width="wrap_content"
        android:layout_height="35dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/border"
        android:text="@string/today_s_progress" >

        <TextView
            android:id="@+id/todays_progress_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@color/progress_red" />

        <TextView
            android:id="@+id/todays_progress_not_done"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="0.06"
            android:background="@color/progress_blue" />
    </LinearLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/working_out_activity_linearLayout"
        android:layout_marginLeft="94dp"
        android:layout_marginTop="82dp" />

</RelativeLayout>